generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PartnerStatus {
  PENDING
  ACTIVE
  REJECTED
  SUSPENDED
}

enum PartnerType {
  LEAD
  CLIENT
}

model Partner {
  id          String        @id @default(cuid())
  email       String        @unique
  companyName String
  contactName String
  phone       String?
  country     String
  status      PartnerStatus @default(PENDING)
  type        PartnerType   @default(LEAD)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("partners")
}
